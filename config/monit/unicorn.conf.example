check process unicorn with pidfile /path/to/pid
  start program = "/etc/init.d/unicorn app_name start" as uid user_name
  stop program = "/etc/init.d/unicorn app_name stop" as uid user_name
  if mem is greater than 150.0 MB for 1 cycles then restart
  if cpu is greater than 50% for 2 cycles then alert
  if cpu is greater than 80% for 3 cycles then restart